# ============================================
# IntelliSurveillance - Configuration
# ============================================
# Copier ce fichier en .env et adapter les valeurs

# === ENVIRONNEMENT ===
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# === BASE DE DONNÉES ===
DB_HOST=localhost
DB_PORT=5432
DB_USER=intelli
DB_PASSWORD=change_me_in_production
DB_NAME=intelli_surveillance

# === REDIS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === DÉTECTION ===
DETECTION_YOLO_MODEL=yolo11m.pt
DETECTION_YOLO_CONFIDENCE=0.25
DETECTION_DEVICE=cuda:0
DETECTION_TRACKER_TYPE=bytetrack

# === VLM ===
VLM_MODEL_NAME=Qwen/Qwen2.5-VL-7B-Instruct
VLM_QUANTIZATION=4bit
VLM_MAX_NEW_TOKENS=1024
VLM_TEMPERATURE=0.7
VLM_SUSPICION_THRESHOLD=0.6

# === ALERTES ===
ALERT_LEVEL_INFO=0.3
ALERT_LEVEL_ATTENTION=0.6
ALERT_LEVEL_CRITICAL=0.85
ALERT_COOLDOWN_SECONDS=30

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=change_this_secret_key_in_production
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]